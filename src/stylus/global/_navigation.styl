

nav

  navHeight = 80px
  fontSize = 35px
  itemWidth = 150px

  display block
  width:100%
  height:navHeight
  padding 0 0 0 0
  position fixed
  top:0




  > ul

    > li
      line-height: navHeight
      text-align center
      letter-spacing:-2.2pt

    li
      padding:0px 10px 0px 10px
      float:left
      font-size:fontSize
      height:navHeight
      color:#eaeaea
      font-weight:200
      text-transform:uppercase
      width: itemWidth
      cursor:pointer
      position:relative
      transition: border .3s


      &.active
        border-bottom:12px #ffffff solid



      a , span
        text-decoration:none
        color:white
        cursor:pointer

      > ul
        subNavHeight = 55px
        subFontSize = 18px

        width:100%
        position:fixed
        top: navHeight
        height:subNavHeight
        left: 0
        background: white




        > li
          width:itemWidth
          font-size:subFontSize
          height:subNavHeight
          text-align:center
          font-weight:200
          float:left
          line-height:subNavHeight
          letter-spacing 0pt
          visibility hidden
          opacity 0
          transition:border .3s
          a , span
            color:black

          &.active
            border-bottom:12px #333333 solid



