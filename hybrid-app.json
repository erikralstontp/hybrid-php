{
    "name": "hybrid-php",
    "welcome": "hybrid-php online. all systems green.",
    "config":
    {
        "source" : {
            "css" : "src/stylus/",
            "js" : "src/app/",
            "images" : "src/images/",
            "templates" : "src/templates/"
        },
        "deploy" : {
            "css" : "app/css/",
            "js" : "app/js/",
            "images" : "app/images/"
        },
        "cdn" : {
            "dev": {
                "cdn_root": "/"
            },
            "prod": {
                "cdn_root": "/"
            }
        },
        "templates" : {
            "folder" : "templates/"
        },
        "paths": [
            {
                "path": "/",
                "view": "pages/index.twig",
                "data" : {
                    "name" : "Home"
                }
            },
            {
                "path": "/work",
                "view": "pages/work.twig",
                "data" : {
                    "name" : "Work"
                }
            },
            {
                "path": "/blog",
                "view": "pages/blog.twig",
                "data" : {
                    "name" : "Blog"
                }
            }
        ]
    }

}